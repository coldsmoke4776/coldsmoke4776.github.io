---
interface Props {
  title: string;
  description: string;
  github: string;
  demoOutput?: string;
}
const { title, description, github, demoOutput } = Astro.props;
---

<div class="border-l-2 border-accent-500 pl-4">
  <h3 class="font-bold text-accent-400 mono">$ cat {title.toLowerCase()}.txt</h3>
  <p class="text-sm text-gray-400 mb-2">{description}</p>
  {demoOutput && (
    <div class="terminal-box mb-2">
      <div class="terminal-header">
        <span class="dot red"></span>
        <span class="dot yellow"></span>
        <span class="dot green"></span>
        <span class="title">matthew@twells:~</span>
      </div>
      <div class="terminal-body">
        <pre class="text-sm text-gray-200 whitespace-pre-wrap">
{demoOutput}
        </pre>
      </div>
    </div>
  )}
  <a href={github} class="underline">âžœ View on GitHub</a>
</div>
