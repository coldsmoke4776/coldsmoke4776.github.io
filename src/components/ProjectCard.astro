---
interface Props {
  title: string;
  description: string;
  github: string;
  demoOutput?: string;
  demoImage?: string; // new prop for screenshots or GIFs
}

const { title, description, github, demoOutput, demoImage } = Astro.props;
---

<div class="border-l-2 border-accent-500 pl-4">
  <h3 class="font-bold text-accent-400 mono">$ cat {title.toLowerCase().replace(/\s+/g, "_")}.txt</h3>
  <p class="text-sm text-gray-400 mb-2">{description}</p>

  {demoOutput && (
    <div class="terminal-box mt-4">
      <div class="terminal-header">
        <span class="dot red"></span>
        <span class="dot yellow"></span>
        <span class="dot green"></span>
        <span class="title">demo@{title.toLowerCase().replace(/\s+/g, "")}:~</span>
      </div>
      <div class="terminal-body">
        <pre class="bg-black text-green-400 font-mono text-sm p-3 rounded-lg overflow-x-auto overflow-y-auto max-h-80 whitespace-pre-wrap">
{demoOutput}
        </pre>
      </div>
    </div>
  )}

  {demoImage && (
    <div class="mt-4">
      <img src={demoImage} alt={`${title} screenshot`} class="rounded-lg border border-gray-700" />
    </div>
  )}

  <a href={github} class="underline mt-2 block">âžœ View on GitHub</a>
</div>
